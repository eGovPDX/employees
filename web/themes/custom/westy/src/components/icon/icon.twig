{%- apply spaceless %}
{# Icon Size #}
{% set size = size|default('lg') %}

{# Set Icon Type #}
{% if name == 'warning' %}
	{% set iconType = 'triangle-exclamation' %}
{% else %}
	{% set iconType = 'circle-info' %}
{% endif %}

{# Classes #}
{% set classes = classes|default([
  'fa-' ~ iconType,
  'fa-' ~ size,
  'fas',
  'mt-3',
  'ms-3',
]) %}

{# TWIG #}
<span class="{{ classes|join(' ') }}"></span>

{% endapply -%}
