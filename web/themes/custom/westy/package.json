{
	"name": "Westy",
	"description": "A Radix subtheme",
	"private": true,
  "engines" : { 
    "npm" : ">=6.0.0",
    "node" : ">=14.0.0"
  },
	"scripts": {
		"postinstall": "find node_modules/ -name '*.info' -type f -delete",
