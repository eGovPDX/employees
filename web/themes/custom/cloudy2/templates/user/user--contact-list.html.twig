{#
/**
 * @file
 * Template for a user view.
 */
#}
{%
  set classes = [
  'user',
  'overflow-auto',
  view_mode|clean_class,
]
%}

<div{{ attributes.addClass(classes) }}>
  {% block content %}
  <div class="float-left align-left field__item">
  {{ content.user_picture }}
  </div>
  <div class="float-left align-left field__item">
    <div>
      <h3><a href="/user/{{ user.id }}">{{ user.field_first_name.value }} {{ user.field_last_name.value }}</a></h3>
      <div class="float-left align-left field__item">
        <strong>{{ content.field_title }}</strong>
        {{ content.field_section }}
        {{ content.field_division_name }}
        {{ content.field_group_names }}
      </div>
      <div class="float-left align-left field__item">
        {{ content.field_phone }}
        {{ content.field_mobile_phone }}
        {% if user.field_keep_mobile_phone_private.value %} Keep mobile phone private {% endif %}
        {{ content.mail }}
        {{ content.field_workspace }}
      </div>
      {# <div class="float-left align-left field__item">
        {{ content.field_search_keywords }}
      </div> #}
    </div>
  </div>
  {% endblock %}
</div>

