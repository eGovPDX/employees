{#
/**
 * @file
 * Template for the main page.
 */
#}
<div class="page">
  {% embed '@radix/navbar/navbar.twig' with {
    placement: 'sticky-top',
    container: 'fixed',
    color: 'light',
    utility_classes: ['bg-light'],
  } %}

    {% block branding %}
      {% if page.navbar_branding %}
        {{ page.navbar_branding }}
      {% endif %}
    {% endblock %}

    {% block left %}
      {% if page.navbar_left %}
        <div class="mr-auto">
          {{ page.navbar_left }}
        </div>
      {% endif %}
    {% endblock %}

    {% block right %}
      {% if page.navbar_right %}
        {{ page.navbar_right }}
      {% endif %}
    {% endblock %}
  {% endembed %}

  <main class="container">
    {% if page.header %}
      <header class="page__header mb-3">
          {{ page.header }}
      </header>
    {% endif %}

    <div class="row">
    {% if page.content %}
      <div class="page__content col-lg-8 col-sm-12">
          {{ page.content }}
      </div>
    {% endif %}
    {% if page.side %}
      <div class="page__side col-lg-4 col-sm-12">
          {{ page.side }}
      </div>
    {% endif %}
    </div>
  </main>

  {% if page.footer %}
    <footer class="page__footer mt-5">
      <div class="container">
        <div class="d-flex justify-content-md-between align-items-md-center">
          {{ page.footer }}
        </div>
      </div>
    </footer>
  {% endif %}
</div>
